{
  "name": "prysm-stock-research",
  "version": "1.0.0",
  "description": "Stock-specific chat-based investment research UI",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:ai": "cd ai-agent && python -m uvicorn main:app --reload --port 8001",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:ai\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
